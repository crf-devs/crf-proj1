{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-form') }}
{% endblock %}

{% block body %}
    <h1>Création de compte</h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.identificationNumber, {label: 'NIVOL'}) }}
    {{ form_row(form.firstName, {label: 'Prénom'}) }}
    {{ form_row(form.lastName, {label: 'Nom'}) }}
    {{ form_row(form.emailAddress, {label: 'Adresse e-mail'}) }}
    {{ form_row(form.birthday, {label: 'Date de naissance'}) }}
    {{ form_row(form.phoneNumber, {label: 'Téléphone'}) }}
    {{ form_row(form.organization, {label: 'Structure de rattachement', help: 'À quelle unité locale êtes-vous rattaché.e ?'}) }}
    {{ form_row(form.vulnerable, {label: false}) }}
    {{ form_row(form.organizationOccupation, {label: 'Fonctions de cadre au sein de votre structure'}) }}
    {{ form_row(form.skillSet, {label: 'Vos compétences Croix-Rouge', help: 'Cochez toutes vos compétences'}) }}
    {{ form_row(form.occupation, {label: 'Votre profession', attr: {'class': 'js-occupation'}}) }}
    {{ form_row(form.fullyEquipped, {label: 'Avez-vous un uniforme en dotation chez vous ?'}) }}
    {{ form_row(form.submit, {label: 'Valider'}) }}
    {{ form_end(form) }}
{% endblock %}
