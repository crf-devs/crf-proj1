{% for message in app.flashes('success') %}
    <div class="alert alert-success {{ class|default('') }}" role="alert">
        {{ message | trans }}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger {{ class|default('') }}" role="alert">
        {{ message }}
    </div>
{% endfor %}
