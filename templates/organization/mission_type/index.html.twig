{% extends 'organization/base.html.twig' %}

{% block title %}Types de missions{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mission-type') }}
{% endblock %}

{% block body %}
    <h1>Types de missions</h1>

    <div class="row">
        <div class="col-12 text-right mb-2">
            <a class="btn btn-success" href="{{ path('app_organization_mission_type_new') }}" role="button">Ajouter un nouveau type de mission</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for mission_type in mission_types %}
                <tr>
                    <td>{{ mission_type.name }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_organization_mission_type_edit', {'id': mission_type.id}) }}">{{ 'action.edit' | trans }}</a>
                        <a class="btn btn-outline-danger trigger-delete" data-modal="#modal-delete-mission-type" data-display-name="{{ mission_type.name }}" href="#" data-href="{{ path('app_organization_mission_type_delete', { id: mission_type.id }) }}">{{ 'action.delete' | trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="modal-delete-mission-type" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Vous Ãªtes sur le point de supprimer le type de mission : <span id="to-delete-name"></span>.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button id="confirm-update" data-url="" data-status="" type="button" class="btn btn-danger">
                        {{ 'action.delete' | trans }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
