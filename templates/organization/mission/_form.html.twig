{{ form_start(form) }}

{% if form.organization is defined %}
    {{ form_row(form.organization) }}
{% endif %}


{{ form_row(form.type) }}
<p class="text-right">
    <a href="{{ path('app_organization_mission_type_new') }}">{{ 'organization.mission.newType' | trans }}</a>
</p>

{{ form_row(form.name) }}

<div class="form-group">
    <label for="fromToRange">{{ 'organization.mission.duration' | trans }}</label>
    <input type="text" id="fromToRange" class="form-control" readonly>
</div>

<div class="d-none">
    {{ form_row(form.startTime) }}
    {{ form_row(form.endTime) }}
</div>

{{ form_rest(form) }}

<button class="btn btn-primary">{{ button_label|default('action.save')|trans }}</button>
{{ form_end(form) }}
